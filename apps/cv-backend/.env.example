# Server
PORT=4000
NODE_ENV=development

# MongoDB (for Docker dev: docker compose -f docker-compose.dev.yml up -d)
MONGODB_URI=mongodb://cvadmin:cvpassword@localhost:4002/cv-builder?authSource=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=4003
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=rtertertertertertertertetertet
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# OpenAI (GPT-5)
OPENAI_API_KEY=your-openai-api-key
OPENAI_DEFAULT_MODEL=gpt-5

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-20250514

# AI Orchestration
AI_PRIMARY_PROVIDER=openai
AI_FALLBACK_PROVIDER=anthropic
AI_FAILOVER_THRESHOLD=3
AI_AB_TESTING_ENABLED=false
AI_COST_OPTIMIZATION=false

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cv-builder-uploads

# SMTP (Email Verification)
SMTP_HOST=smtp.titan.email
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=support@EXAMPLE.COM
SMTP_PASS=your-app-password
SMTP_FROM=support@EXAMPLE.COM

# Frontend URL
FRONTEND_URL=http://localhost:4001

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_PREMIUM_MONTHLY=price_xxx
STRIPE_PRICE_PREMIUM_YEARLY=price_xxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxx

# Admin Default
ADMIN_EMAIL=admin@cvbuilder.com
ADMIN_PASSWORD=Admin@123456
